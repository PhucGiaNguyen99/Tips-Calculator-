<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/excellentTipInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Excellent (25%)"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/averageTipInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Average (20%)"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/belowAverageTipInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Below Average (15%)"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update the values" />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:backgroundTint="#FF0000"
        android:textColor="#FFFFFF"
        android:layout_marginTop="8dp"/>

</LinearLayout>